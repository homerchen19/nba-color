{
  "name": "nba-color",
  "description": "Get NBA team's color.",
  "license": "MIT",
  "author": "xxhomey19",
  "homepage": "https://github.com/xxhomey19/nba-color#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/xxhomey19/nba-color/tree/master"
  },
  "bugs": {
    "url": "https://github.com/xxhomey19/nba-color/issues"
  },
  "version": "1.3.2",
  "main": "lib/nba-color.js",
  "module": "lib/nba-color.mjs",
  "scripts": {
    "build": "npm run clean && microbundle build src --ignore \"**/schema.js\",\"**/*.spec.js\" -d lib --sourcemap=false",
    "clean": "rimraf lib",
    "precommit": "lint-staged",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint:fix && npm run testonly:cov && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "testonly": "NODE_ENV=test jest",
    "testonly:cov": "jest --coverage --runInBand --forceExit --no-cache",
    "testonly:watch": "jest --watch"
  },
  "dependencies": {
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/node": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "23.6.0",
    "babel-plugin-ramda": "^1.6.3",
    "coveralls": "^3.0.2",
    "eslint": "^5.6.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.1",
    "jest": "23.6.0",
    "joi": "^13.7.0",
    "lint-staged": "^7.3.0",
    "microbundle": "^0.6.0",
    "prettier": "^1.14.3",
    "prettier-package-json": "^2.0.1",
    "rimraf": "^2.6.2"
  },
  "keywords": [
    "basketball",
    "color",
    "nba"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "testPathIgnorePatterns": [
      "node_modules/"
    ]
  },
  "lint-staged": {
    "package.json": [
      "prettier-package-json --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "umd:main": "lib/nba-color.umd.js"
}
